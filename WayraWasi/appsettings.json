{
  "ConnectionStrings": {
    "DBConnection": "Server=localhost\\SQLEXPRESS;Database=DBWayraWasi;Integrated Security=True;TrustServerCertificate=True;Encrypt=True;Trusted_Connection=True;MultipleActiveResultSets=true;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ReservaIndex": {
    "DiasReservas": 14
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "ConfiguracionFotosCabanias": {
    "DirectorioFotos": "wwwroot/images/cabanias",
    "CantidadFotosPorCabania": 5
  }
}
