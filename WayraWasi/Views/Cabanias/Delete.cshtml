@model WayraWasi.Models.Cabania

@{
    ViewBag.Title = "Eliminar Cabaña";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Wayra Wasi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-4">
        <h2>Eliminar Cabaña</h2>

        @Html.ValidationSummary(true, "", new { @class = "alert alert-warning" })

        <h3>¿Está seguro de que desea eliminar esta cabaña?</h3>
        <div>
            <h4>Cabaña</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>Nombre de cabaña</dt>
                <dd>@Html.DisplayFor(model => model.NombreCabania)</dd>
                <dt>Descripción</dt>
                <dd>@Html.DisplayFor(model => model.Descripcion)</dd>
                <dt>Capacidad</dt>
                <dd>@Html.DisplayFor(model => model.Capacidad)</dd>
                <dt>Precio por noche</dt>
                <dd>@Html.DisplayFor(model => model.PrecioNoche)</dd>
            </dl>

            @using (Html.BeginForm("DeleteConfirmation", "Cabanias", new { id = Model.IdCabania }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="col-md-10 ms-auto text-end">
                    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                    <a href="@Url.Action("Index")" class="btn btn-primary">Volver</a>
                </div>
            }
        </div>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>