@model WayraWasi.Models.Cabania

@{
    ViewBag.Title = "Detalles de Cabaña";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Wayra Wasi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-4">
        <h2>Detalles de Cabaña</h2>

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        <div>
            <h4>Cabaña</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>Nombre de cabaña</dt>
                <dd>@Html.DisplayFor(model => model.NombreCabania)</dd>
                <dt>Descripción</dt>
                <dd>@Html.DisplayFor(model => model.Descripcion)</dd>
                <dt>Capacidad</dt>
                <dd>@Html.DisplayFor(model => model.Capacidad)</dd>
                <dt>Precio por noche</dt>
                <dd>@Html.DisplayFor(model => model.PrecioNoche)</dd>
            </dl>
        </div>
        <div class="col-md-10 ms-auto text-end">
            <p>
                <a href="@Url.Action("Edit", new { id = Model.IdCabania })" class="btn btn-warning">Editar</a> |
                <a href="@Url.Action("Index")" class="btn btn-primary">Volver</a>
            </p>
        </div>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>