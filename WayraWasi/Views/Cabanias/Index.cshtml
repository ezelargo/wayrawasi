@model IEnumerable<WayraWasi.Models.Cabania>

@{
    ViewBag.Title = "Listado de Cabañas";
}

<h2>Listado de Cabañas</h2>

@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Crear Nueva Cabaña</a>
</p>
<table id="cabaniasTable" class="table table-striped">
    <thead>
        <tr>
            <th>Nombre de la cabaña</th>
            <th>Descripcion</th>
            <th>Capacidad</th>
            <th>Precio por noche</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NombreCabania)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.Capacidad)</td>
                <td>@Html.DisplayFor(modelItem => item.PrecioNoche)</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.IdCabania })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Details", new { id = item.IdCabania })" class="btn btn-info">Detalles</a>
                    <a href="@Url.Action("Delete", new { id = item.IdCabania })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#cabaniasTable').DataTable({
                language: {
                    "decimal": "",
                    "emptyTable": "No hay datos disponibles en la tabla",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ cabañas",
                    "infoEmpty": "Mostrando 0 a 0 de 0 cabañas",
                    "infoFiltered": "(filtrado de _MAX_ cabañas totales)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar _MENU_ cabañas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "No se encontraron registros coincidentes",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    },
                    "aria": {
                        "sortAscending": ": activar para ordenar la columna ascendente",
                        "sortDescending": ": activar para ordenar la columna descendente"
                    }
                }
            });
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}