@model WayraWasi.Models.Reserva
@{
    ViewBag.Title = "Eliminar Reservación";
}

<h2>Eliminar Reservación</h2>

@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

<h3>¿Está seguro de que desea eliminar esta reservación?</h3>
<div>
    <h4>Reservación</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NombreCliente)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NombreCliente)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FechaEntrada)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FechaEntrada)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FechaSalida)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FechaSalida)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NumeroPersonas)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumeroPersonas)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.IdCabania)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdCabania)
        </dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmation", "Reservas", new { id = Model.IdReservacion }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a href="@Url.Action("Index")" class="btn btn-primary">Volver a la Lista</a>
        </div>
    }
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}