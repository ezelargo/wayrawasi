@model WayraWasi.Models.Reserva
@{
    ViewBag.Title = "Eliminar Reservación";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Wayra Wasi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-4">
        <h2>Eliminar Reservación</h2>

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        <h3>¿Está seguro de que desea eliminar esta reserva?</h3>
        <div>
            <h4>Reservación</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Nombre
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NombreCliente)
                </dd>
                <dt>
                    Fecha de entrada
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FechaEntrada)
                </dd>
                <dt>
                    Fecha de salida
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FechaSalida)
                </dd>
                <dt>
                    Cantidad de personas
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NumeroPersonas)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Estado)
                </dd>
            </dl>

            @using (Html.BeginForm("DeleteConfirmation", "Reservas", new { id = Model.IdReservacion }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="col-md-10 ms-auto text-end">
                    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                    <a href="@Url.Action("Index")" class="btn btn-primary">Volver</a>
                </div>
            }
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>