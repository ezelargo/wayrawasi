@{
    ViewBag.Title = "Generar Reporte de Reservas";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Wayra Wasi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-4">
        <h2>Generar Reporte de Reservas</h2>

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        @using (Html.BeginForm("GenerarReporteReservas", "Reservas", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.Label("Fecha Inicio")
                @Html.TextBox("fechaInicio", null, new { @class = "form-control", type = "date" })
            </div>
            <div class="form-group">
                @Html.Label("Fecha Fin")
                @Html.TextBox("fechaFin", null, new { @class = "form-control", type = "date" })
            </div>
            <button type="submit" class="btn btn-primary">Generar Reporte</button>
            <a href="@Url.Action("Index","Home")" class="btn btn-primary">Volver a la Lista</a>
        }
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>