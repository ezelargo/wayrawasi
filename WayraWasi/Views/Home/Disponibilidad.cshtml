@model IEnumerable<WayraWasi.Models.Cabania>
@{
    ViewBag.Title = "Disponibilidad de Cabañas";
}

<h2>Disponibilidad de Cabañas</h2>

@using (Html.BeginForm("Disponibilidad", "Home", FormMethod.Post, new { @class = "form-inline" }))
{
    <div class="form-group">
        <label for="fechaInicio">Fecha de Inicio:</label>
        <input type="date" id="fechaInicio" name="fechaInicio" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="fechaFin">Fecha de Fin:</label>
        <input type="date" id="fechaFin" name="fechaFin" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Ver Disponibilidad</button>
}

@if (Model != null)
{
    <h3>Disponibilidad del @ViewBag.FechaInicio al @ViewBag.FechaFin</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Capacidad</th>
                <th>Precio por Noche</th>
                <th>Disponibilidad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NombreCabania</td>
                    <td>@item.Descripcion</td>
                    <td>@item.Capacidad</td>
                    <td>@item.PrecioNoche</td>
                    
                </tr>
            }
        </tbody>
    </table>
}
