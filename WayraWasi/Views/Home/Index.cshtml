@{
    ViewData["Title"] = "Pagina Principal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wayra Wasi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="container">
        <div class="jumbotron mt-4">
            <h1 class="display-4">Bienvenido a Wayra Wasi!</h1>
            <p class="lead">Accede rápidamente a las funcionalidades principales.</p>
            <hr class="my-4">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h4 class="card-title">
                                <i class="bi bi-journal-check"></i> Gestión de Reservas
                            </h4>
                            <p class="card-text">Administra las reservas de cabañas.</p>
                        </div>
                        <div class="card-footer">
                            <a href="/Reservas/Index" class="btn btn-primary">Ver Reservas</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h4 class="card-title">
                                <i class="bi bi-house"></i> Gestión de Cabañas
                            </h4>
                            <p class="card-text">Administra las cabañas disponibles.</p>
                        </div>
                        <div class="card-footer">
                            <a href="/Cabanias/Index" class="btn btn-primary">Ver Cabañas</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h4 class="card-title">
                                <i class="bi bi-calendar-check"></i> Disponibilidad
                            </h4>
                            <p class="card-text">Consulta la disponibilidad de cabañas.</p>
                        </div>
                        <div class="card-footer">
                            <a href="/Home/Disponibilidad" class="btn btn-primary">Disponibilidad</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h4 class="card-title">
                                <i class="bi bi-file-earmark-bar-graph"></i> Reportes
                            </h4>
                            <p class="card-text">Genera reportes de reservas.</p>
                        </div>
                        <div class="card-footer">
                            <a href="/Reservas/GenerarReporteReservas" class="btn btn-primary">Reportes</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgOSXt6F7bjvCEM0yCbmIVw52H8JoZlB8JGz8d7gmdvF4pAKzz7" crossorigin="anonymous"></script>
</body>
</html>